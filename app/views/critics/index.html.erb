<h1>Listing critics</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Content</th>
    <th>User</th>
    <th>Html path</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @critics.each do |critic| %>
  <tr>
    <td><%= critic.title %></td>
    <td><%= critic.category %></td>
    <td><%= critic.content %></td>
    <td><%= critic.user_id %></td>
    <td><%= critic.html_path %></td>
    <td><%= link_to 'Show', critic %></td>
    <td><%= link_to 'Edit', edit_critic_path(critic) %></td>
    <td><%= link_to 'Destroy', critic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

