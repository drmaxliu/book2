<div class="container-fluid">

  <div class="row-fluid">

    <div class="span3">
      <%= render 'navibar_collections' %>
      <%= render 'navibar_books' %>
      <div class="well sidebar-nav">
        <img data-src="holder.js/280x600" alt="">
      </div>
    </div>

    <div class="span9">

      <div class="container-fluid">
        <h2>
          <%= @collection.title %>
        </h2>
        <% pp =  @collection.description.split("PP") %> 
        <% pp.each do |p1| %>
        <p>
          <%= p1 %>
        </p> 
        <% end %>

        <% if !@collection.collection_pages.empty? %>
          <p>閲讀書卷分類補充内容： |
            <%= link_to "目錄", book_series_collection_collection_pages_url(@book_series, @collection), 
              :id => "chapter_list" %> |
            <% @collection.collection_pages.each do |collection_page| %>
              <%= link_to collection_page.title, book_series_collection_collection_page_url(@book_series, @collection, collection_page), :id => "chapter_list" %> |
            <% end %>
          </p>
        <% end %>

      </div>

      <hr class="featurette-divider">

      <div class="container-fluid">
        <div class="row-fluid">
          <% @collection.books.each do |book| %>
            <div class="container-fluid">
              <div class="row-fluid">
                <div class="span2">
                  <p>
                  </p>
                  <p>
                    <% if book.logo == nil %>
                      <% p2 ="/bible1.jpg" %>
                    <% else %>
                      <%  p2 = "/" + book.logo %>
                    <% end %>
                  </p>
                  
                  <img data-src="holder.js/120x100" class="img-rounded" alt="120x100" style="width: 120px; height: 100px;" src="<%= p2.to_s %>">
                </div>
                <div class="span10">
                  <h3>
                    <%= book.title %>
                  </h3>
                  <% pp = book.description.split("PP") %> 
                    <% pp.each do |p1| %>
                    <p>
                      <%= p1 %>
                    </p> 
                    <% end %>
                  <p>
                    <%=link_to "更多内容", book_series_collection_book_url(@book_series_1, @collection, book), class: "btn btn-min btn-primary" %>
                  </p>
                  <% if !book.chapters.order("chapter_no").empty? %>
                    <p> 閲讀本書第： |
                      <% book.chapters.each do |chap| %>
                        <%= link_to chap.chapter_no.to_s, book_series_collection_book_chapter_url(@book_series_1, @collection, book, chap), :id => "chapter_list" %> | 
                      <% end %> 章
                    </p>
                  <% end %>
                  <% if !book.book_pages.empty? %>
                    <p>
                      閲讀本書補充内容： | <%= link_to "目錄", 
                        book_series_collection_book_book_pages_url(@book_series, @collection, book),
                         :id => "chapter_list" %> |
                      <% book.book_pages.each do |book_page| %>
                        <%= link_to book_page.title, book_series_collection_book_book_page_url(@book_series_1, @collection, book, book_page), :id => "chapter_list" %> |
                      <% end %>
                    </p>
                  <% end %>
                </div>
              </div>
            </div>
            <hr class="featurette-divider">
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>

<h1>Book Listing of Collection <%= @collection.title %></h1>

<% if !@collection.books.empty? %>
  <table>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Collection</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.description %></td>
      <td><%= book.collection_id %></td>
      <td><%= link_to 'Show', [@book_series, @collection, book] %></td>
      <td><%= link_to 'Edit', edit_book_series_collection_book_path(@book_series, @collection, book) %></td>
      <td><%= link_to 'Destroy', [@book_series, @collection, book], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

<% else %>
  <p>Collection <%= @collection.title %> has no books yet. %></p>
<% end %>

<p>
  <%= link_to 'New Book', new_book_series_collection_book_path(@book_series, @collection) %> | 
  <%= link_to 'Back', [@book_series, @collection] %>
</p>
