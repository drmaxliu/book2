
<div class="well sidebar-nav">

  <button type="button" class="btn btn-block btn-primary">
  <h3><%= @collection.title %></h3>
  </button>
  <p><% i = 1 %></p>

  <table class="table table-hover">
    <tbody>
      <% @collection.books.each do |book| %>
      <tr>
        <td><span class="badge badge-warning"><%= i %></span></td>
        <td><font color="#000000"><%= link_to book.title, 
          book_series_collection_book_url(@book_series_1, @collection, book) %></font></td>
      </tr>
      <% i = i+1 %>
      <% end %>
    </tbody>
  </table>
</div>


